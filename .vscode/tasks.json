{
  "version": "2.0.0",
  "tasks": [
    {
      "type": "cppbuild",
      "label": "g++ build",
      "command": "g++",
      "args": [
        "-fdiagnostics-color=always",
        "-g",
        "-Wall",
        "-Wextra",
        "-std=c++23",
        "${file}",
        "-o",
        "a.out"
      ],
      "options": {
        "cwd": "${fileDirname}"
      },
      "problemMatcher": ["$gcc"],
      "group": {
        "kind": "build",
        "isDefault": true
      },
      "detail": "Build C++ file with g++"
    }
  ]
}
